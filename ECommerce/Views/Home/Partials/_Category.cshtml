@model PagedProductViewModel

<h5 class="filterBy__heading">Categories</h5>

<div class="filterBy__list-wrapper">
    <ul>

        @foreach (var category in Model.Categories)
        {
            string isLinkSelectedClassName = "filterBy__item__not-selected";

            if (category.Slug == Model.CurrentCategory)
            {
                isLinkSelectedClassName = "filterBy__item__selected";
            }

            <li>

                <a asp-controller="Home" asp-action="Index"
                   asp-route-category_slug="@category.Slug"
                   asp-route-brand_slug="@Model.CurrentBrand"
                   asp-route-page=1
                   class="@isLinkSelectedClassName">

                    @category.Name

                </a>
            </li>

        }
    </ul>

</div>